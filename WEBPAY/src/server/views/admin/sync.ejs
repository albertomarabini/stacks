<!doctype html>
<html>

<head>
  <meta charset="utf-8">
  <title>
    <%= (branding && branding.displayName) || 'Admin' %> â€¢ Sync On-Chain
  </title>
  <link rel="stylesheet" href="/static/css/admin.css">
  <% if (brandCssStyle) { %>
    <%= brandCssStyle %>
      <% } %>
</head>

<body class="bg-gray-50">
  <%- include('./_brandbar', { branding }) %>
    <main
      style="max-width:960px;margin:3rem auto;padding:2rem;background:#fff;border-radius:1rem;box-shadow:0 1px 4px rgba(0,0,0,.08)">
      <h1 class="text-2xl font-semibold mb-4">Sync On-Chain</h1>
      <% if (Array.isArray(unsignedCalls) && unsignedCalls.length) { %>
        <pre class="bg-gray-100 p-3 rounded"><%= JSON.stringify(unsignedCalls, null, 2) %></pre>
        <% } else { %>
          <p class="text-gray-600">Nothing to sync (or Bridge not connected).</p>
          <% } %>
    </main>
</body>

</html>
