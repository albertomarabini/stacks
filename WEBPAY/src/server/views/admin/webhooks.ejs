<!doctype html>
<html>

<head>
    <meta charset="utf-8">
    <title><%= (branding && branding.displayName) || 'Admin' %> • Webhooks</title>
    <link rel="stylesheet" href="/static/css/admin.css">
    <% if (brandCssStyle) { %>
        <%= brandCssStyle %>
            <% } %>
</head>

<body class="bg-gray-50">
    <%- include('./_brandbar', { branding }) %>
    <main
        style="max-width:960px;margin:3rem auto;padding:2rem;background:#fff;border-radius:1rem;box-shadow:0 1px 4px rgba(0,0,0,.08)">
        <h1 class="text-2xl font-semibold mb-4">Webhook Logs</h1>
        <% if (Array.isArray(webhooks) && webhooks.length) { %>
            <table class="min-w-full text-sm">
                <thead>
                    <tr>
                        <th class="text-left">ID</th>
                        <th class="text-left">Event</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    <% webhooks.forEach(w=> { %>
                        <tr>
                            <td class="pr-4"><code><%= w.id %></code></td>
                            <td class="pr-4">
                                <%= w.eventType || w.event || '—' %>
                            </td>
                            <td>
                                <%= w.success===true ? '✅' : w.success===false ? '❌' : '—' %>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
            <% } else { %>
                <p class="text-gray-600">No webhook logs yet.</p>
                <% } %>
    </main>
</body>

</html>
