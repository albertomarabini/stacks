<% layout('./layout-merchant') %>

<section class="grid gap-4 sm:grid-cols-2">
  <div class="card">
    <h2>Your Store Id</h2>
    <h1><%- storeId %></h1>
  </div>

  <div class="card">
    <h2>Point of Sale</h2>
    <p class="text-muted">Create an invoice, show QR, and track payment live.</p>
    <a class="btn mt-3" href="/pos/<%- storeId %>">Open POS</a>
  </div>

  <div class="card">
    <h2>Invoices</h2>
    <p class="text-muted">Browse and manage your invoices.</p>
    <a class="btn secondary mt-3" href="/merchant/<%- storeId %>/invoices">Open Invoices</a>
  </div>

  <div class="card">
    <h2>Subscriptions</h2>
    <p class="text-muted">Recurring billing in invoice mode.</p>
    <a class="btn secondary mt-3" href="/merchant/<%- storeId %>/subscriptions">Open Subscriptions</a>
  </div>

  <div class="card">
    <h2>Settings</h2>
    <p class="text-muted">Brand color, name, and webhooks.</p>
    <a class="btn secondary mt-3" href="/merchant/<%- storeId %>/settings">Open Settings</a>
  </div>
</section>
