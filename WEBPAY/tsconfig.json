{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "rootDir": ".",
    "outDir": "dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "inlineSources": true,
    "inlineSourceMap": false,
    "typeRoots": ["./src/types", "./node_modules/@types"]  // ← add this
  },
  "include": [
    "src/server/**/*",
    "src/shared/**/*",
    "src/types/**/*.d.ts",                                  // ← and this
    "config.ts"
  ],
  "exclude": ["src/client/**/*", "public/**/*", "dist"]
}
