          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": "^\\[islands\\] watching",
            "endsPattern": "^\\[islands\\] âœ… build succeeded"
          }
        },
        "presentation": {
          "reveal": "silent"
        }
      }
    ]
  }
